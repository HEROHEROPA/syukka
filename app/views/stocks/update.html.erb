<div class = table>
<table>
  <tr>
  <th>ID</th>
  <th>製品名</th>
  <th>在庫量</th>
  <th>注文数</th>
  <th>入庫数</th>
  </tr>
<% @stocks.each do |stock| %>
   <tr>
  <th><%= stock.id %></th>
  <th><%= stock.item_number %></th>
  <th><%= stock.stock_amount %></th> 
  <%if @error != "" && @order.order_number == stock.item_number %>
  <th><%= @order.order_amount %></th> 
  <% end %>
  </tr>
<% end %>
</table>
</div>

<%if @error != "" %>
 <div style="color:red; font-size:30px"> <%= @error %> </div>

<% else %>
 <div class="item-number">
    <h2 class="items-sell-title">出荷指示</h2>
    <%= form_with model:[@order,@shipping] ,local: true do |f| %>
    <%# modelオプションはテーブル側に保存するカラムが無いとインスタンスを指定できない。 %>
   <%# <%=render 'shared/error_messages', model: f.object %> 
      <div class="sell-btn-contents"> 
      <%= f.submit "出荷指示" ,class:"sell-btn" %> 
     </div>
    <% end %>  
  </div>  
<% end %>  

  <div class="item-number">
      <%# <h2 class="items-sell-title">入庫履歴</h2> %>
     <div class="item-number">
      <%# <h2 class="items-sell-title">入庫履歴</h2> %>
  <button><%= link_to "入庫履歴ページ", "/orders/#{@order.id}/stocks/#{@to_stock.id}/to_stocks", method: :get %></button>
      
  </div> 
      </div> 

  